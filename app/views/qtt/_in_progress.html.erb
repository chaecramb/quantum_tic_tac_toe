
<% if @qtt.qtt_moves.any? && @qtt.collapse?%>
  <%= render 'qtt/collapse', qtt: @qtt %>
<% else %>
  <%= form_tag({controller: 'qtt', action: 'update'}, method: :put, class: 'form') do %>
    <p><%= "#{@current_player}'s turn" %></p>
    <p>Enter two squares</p>
    <div class="form-group">
      <%= text_field_tag(:squares, nil, placeholder: "e.g. 0,6", autofocus: true, class: 'form-control') %>
    </div>
    <div class="new-game-submit">
      <%= submit_tag "Make move", class: 'btn btn-default btn-lg' %>
    </div>
  <% end %>
<% end %>

